@inherits UmbracoViewPage<StandardContent>

@{
    Layout = "/Views/Shared/_Layout.cshtml";
}
<partial src="/Views/Shared/Hero.cshtml" />
<partial src="/Views/Shared/Breadcrumb.cshtml" />


@if (Model.Content != null)
{
    @await Html.GetBlockListHtmlAsync(Model, "content")
}

@if (Model.Pods != null)
{
    <partial src="/Views/Partials/Pods.cshtml" />
}

@section Scripts {
    <script type="text/javascript" src="/common/scripts/bundles/content.bundle.js")" asp-append-version="true"></script>
}