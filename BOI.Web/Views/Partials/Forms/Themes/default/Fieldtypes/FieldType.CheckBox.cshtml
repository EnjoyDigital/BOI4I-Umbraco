@model Umbraco.Forms.Web.Models.FieldViewModel
<div class="checkboxlist checkbox-wrapper inline">
    <input type="checkbox" name="@Model.Name" id="@Model.Id" value="true" data-umb="@Model.Id"
    @if (Model.Mandatory)
    {
        <text>  data-val="true" data-val-requiredcb="@Model.RequiredErrorMessage" required</text>
    }
    @if (Model.ContainsValue(true) || Model.ContainsValue("true") || Model.ContainsValue("on"))
    {
        <text>checked="checked"</text>
    }

    />
    <input type="hidden" name="@Model.Name" value="false" />
    <label for="@Model.Id">
        <span>@Model.Caption</span>
    </label>
</div>